{
  "name": "style-dictionary-utils",
  "version": "2.2.1",
  "type": "module",
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lukasoppermann/style-dictionary-utils.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "description": "Utilities to use in your style dictionary config",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist/*",
    "src/**/*.ts"
  ],
  "scripts": {
    "test": "npm run build && NODE_OPTIONS=--experimental-vm-modules npx jest && npm run lint && tsc --noEmit",
    "test:action": "npm run build && NODE_OPTIONS=--experimental-vm-modules jest -c ./jest.action.config.ts",
    "lint": "npx eslint . --ext .ts",
    "lint:fix": "npx eslint . --ext .ts --fix",
    "lint:report": "npx eslint --output-file eslint_report.json --format json src",
    "clean:dist": "rm -rf dist/",
    "prebuild": "npm run clean:dist",
    "build": "tsc",
    "preversion": "npm run build && npm run test",
    "postversion": "git push --follow-tags"
  },
  "keywords": [
    "design token",
    "style dictionary",
    "design system"
  ],
  "author": "Lukas Oppermann",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lukasoppermann/style-dictionary-utils/issues"
  },
  "homepage": "https://github.com/lukasoppermann/style-dictionary-utils#readme",
  "dependencies": {
    "color2k": "^2.0.0",
    "json5": "^2.2.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "color2k": "^2.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^4.10.2",
    "jest": "^29.7.0",
    "json5": "^2.2.1",
    "prettier": "^3.3.2",
    "ts-jest": "^29.2.2",
    "typescript": "5.5"
  },
  "peerDependencies": {
    "style-dictionary": "^4.0.0"
  }
}
